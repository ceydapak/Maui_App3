<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Graduation_project.AddNotePage"
             Title="Add Note"
             Appearing="ContentPage_Appearing">
    <StackLayout Padding="40" >
        <StackLayout Orientation="Vertical" HorizontalOptions="Center" >

            <HorizontalStackLayout>
                <Label Text="Title"/>
                <Entry  x:Name="title" WidthRequest="300" />
            </HorizontalStackLayout>
            
            <HorizontalStackLayout>
                <Label Text="Note"/>
                <Entry  x:Name="note_entry" WidthRequest="300" HeightRequest="200" VerticalOptions="Start" VerticalTextAlignment="Start" />
            </HorizontalStackLayout>

            <Button x:Name="Send_Btn" Text="Send"  WidthRequest="100" Clicked="Send_Btn_Clicked"/>

        </StackLayout>
    

    </StackLayout>
</ContentPage>